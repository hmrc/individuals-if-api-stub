{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Individual's PAYE employments",
  "type": "object",
  "properties": {
    "employments": {
      "type": "array",
      "description": "The list of the individualâ€™s PAYE employment data for the requested time period.",
      "items": {
        "type": "object",
        "properties": {
          "payments": {
            "description": "Payments made during the employment",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date": {
                  "description": "The date of the payment",
                  "id": "full-date",
                  "example": "2019-01-31"
                },
                "paidTaxablePay": {
                  "type": "number",
                  "description": "The amount of the payment",
                  "example": "4765.32"
                }
              }
            }
          },
          "employer": {
            "type": "object",
            "description": "The employer's details.",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the employer.",
                "example": "ACME Industries Limited"
              },
              "address": {
                "type": "object",
                "description": "The address of the employer.",
                "properties": {
                  "line1": {
                    "type": "string",
                    "description": "Address line 1.",
                    "example": "Unit 23"
                  },
                  "line2": {
                    "type": "string",
                    "description": "Address line 2.",
                    "example": "Utilitarian Industrial Park"
                  },
                  "line3": {
                    "type": "string",
                    "description": "Address line 3.",
                    "example": "Utilitown"
                  },
                  "line4": {
                    "type": "string",
                    "description": "Address line 4.",
                    "example": "County Durham"
                  },
                  "line5": {
                    "type": "string",
                    "description": "Address line 5.",
                    "example": "UK"
                  },
                  "postcode": {
                    "type": "string",
                    "description": "The postcode for the address.",
                    "example": "DH4 4YY"
                  }
                }
              },
              "districtNumber": {
                "type": "string",
                "description": "The employer's district number.",
                "example": "247"
              },
              "schemeRef": {
                "type": "string",
                "description": "The employer's scheme reference.",
                "example": "ZT6767895A"
              }
            }
          },
          "employment": {
            "type": "object",
            "description": "The employment details.",
            "properties": {
              "startDate": {
                "type": "string",
                "id": "full-date",
                "description": "The date the employment started.",
                "example": "2019-01-01"
              },
              "endDate": {
                "type": "string",
                "id": "full-date",
                "description": "The date the employment ended.",
                "example": "2019-03-01"
              }
            }
          }
        }
      }
    }
  },
  "required": ["employments"]
}
