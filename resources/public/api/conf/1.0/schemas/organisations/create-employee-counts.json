{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Create Employee Counts",
  "type": "object",
  "properties": {
    "startDate": {
      "description": "The start date for the data.",
      "id": "full-date",
      "example": "2019-10-01"
    },
    "endDate": {
      "description": "The end date for the data. If missing, it defaults to today's date.",
      "id": "full-date",
      "example": "2020-04-05"
    },
    "references": {
      "description": "The organisation's PAYE (Pay As You Earn) reference details.",
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "object",
        "properties": {
          "districtNumber": {
            "description": "The organisation's district number.",
            "type": "string",
            "pattern": "^[0-9]{3}$",
            "example": "456"
          },
          "payeReference" : {
            "type": "string",
            "example": "RT882d",
            "pattern": "^[a-zA-Z0-9]{1,10}$"
          },
          "counts": {
            "description": "Details about the employee count.",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "dateTaken": {
                  "description": "The date the employee count was taken. Date in the format YYYY-MM.",
                  "example": "2019-10"
                },
                "employeeCount":{
                  "description": "The number of employees counted on a particular date.",
                  "type": "integer",
                  "example": "554"
                }
              }
            }
          }
        }
      }
    }
  }
}