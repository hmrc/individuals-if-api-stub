{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Organisations return details",
  "type": "object",
  "required": [
    "utr",
    "startDate",
    "taxpayerType",
    "taxSolvencyStatus",
    "taxyears"
  ],
  "properties": {
    "utr": {
      "type": "string",
      "description": "A Unique Taxpayer Reference.",
      "pattern": "^[0-9]{10}$",
      "example": "1234567890"
    },
    "startDate": {
      "type": "string",
      "description": "The start date for Self Assessment data.",
      "id": "full-date",
      "example" : "2015-04-21"
    },
    "taxpayerType": {
      "type": "string",
      "description": "The type of taxpayer the organisation is.",
      "pattern": "^[A-Z][a-zA-Z]{3,24}$",
      "example" : "Individual"
    },
    "taxSolvencyStatus": {
      "type": "string",
      "enum": ["I", "S"],
      "description": "The tax solvency status for the organisation. I - Insolvent, S - Solvent.",
      "example": "S"
    },
    "taxyears": {
      "type": "array",
      "description": "Self Assessment tax returns.",
      "items": {
        "type": "object",
        "properties": {
          "taxyear": {
            "type": "integer",
            "example": "2020",
            "pattern": "^20[0-9]{2}$",
            "description": "The tax year."
          },
          "businessSalesTurnover": {
            "type": "number",
            "example": "20177.77",
            "description": "The total business sales turnover in the range -99999999999.99 to 99999999999.99."
          }
        }
      }
    }
  }
}